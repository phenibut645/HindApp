<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="HindApp.Views.LoginView"
    Title="Вход">

    <VerticalStackLayout Padding="30" Spacing="20">
        <Label Text="Вход в приложение" FontSize="24" HorizontalOptions="Center" />

        <Entry x:Name="UsernameEntry" Placeholder="Имя пользователя" />
        <Entry x:Name="PasswordEntry" Placeholder="Пароль" IsPassword="True" />

        <Button Text="Войти" Clicked="OnLoginClicked" />
    </VerticalStackLayout>
</ContentPage>
