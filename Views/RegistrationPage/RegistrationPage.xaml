<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HindApp.Views.RegistrationPage"
             Title="RegistrationPage">
    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Имя пользователя" />
        <Entry x:Name="UsernameEntry" Placeholder="Введите имя" />

        <Label Text="Пароль" />
        <Entry x:Name="PasswordEntry" Placeholder="Введите пароль" IsPassword="True" />

        <Button Text="Зарегистрироваться" Clicked="OnRegisterClicked" />

        <Label x:Name="StatusLabel" TextColor="Red" />

        <Button Text="Уже есть аккаунт? Войти" Clicked="OnLoginClicked" />
    </VerticalStackLayout>
</ContentPage>