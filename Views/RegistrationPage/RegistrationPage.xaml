<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HindApp.Views.RegistrationPage"
             Title="RegistrationPage">
    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Kasutaja nimi" />
        <Entry x:Name="UsernameEntry" Placeholder="Sisestage nimi" />

        <Label Text="Salasona" />
        <Entry x:Name="PasswordEntry" Placeholder="Sisestage oma parool" IsPassword="True" />

        <Button Text="Registreeru" Clicked="OnRegisterClicked" />

        <Label x:Name="StatusLabel" TextColor="Red" />

        <Button Text="Kas teil on juba konto? Logi sisse" Clicked="OnLoginClicked" />
    </VerticalStackLayout>
</ContentPage>