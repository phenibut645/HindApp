<?xml version="1.0" encoding="utf-8" ?>
<Shell
    x:Class="HindApp.AdminShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:HindApp.Views.Admin"
    xmlns:views="clr-namespace:HindApp.Views"
    Shell.FlyoutBehavior="Disabled">
    <TabBar>
        <ShellContent Title="Kauplused" Icon="stores.png" ContentTemplate="{DataTemplate pages:StoresPage}" Route="stores" />
        <ShellContent Title="Tooted" Icon="products.png" ContentTemplate="{DataTemplate pages:ProductsPage}" Route="products" />
        <ShellContent Title="Kategooriad" Icon="categories.png" ContentTemplate="{DataTemplate pages:CategoriesPage}" Route="categories" />
        <ShellContent Title="Väljapääs" Icon="logout.png" ContentTemplate="{DataTemplate views:LogoutPage}" Route="logout" />
    </TabBar>
</Shell>
